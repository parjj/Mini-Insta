<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!-- Let's define styles for EditText and Button inside styles.xml   when u define inside style theme , this property applies to all textview and edittext
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>  -->
    </style>


    <style name="BoldLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit_text_style</item>
    </style>


</resources>
