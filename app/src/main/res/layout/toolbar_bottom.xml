<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_layout"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2">
        <ImageView
                android:id="@+id/leftSide"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter" android:layout_height="50dp"
                app:srcCompat="@drawable/home_inactive_optimized" android:scaleX="0.6" android:scaleY="0.6"
                android:layout_marginBottom="5dp"/>
        <ImageView
                android:id="@+id/rightSide"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:scaleX="0.6" android:scaleY="0.6"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/icn_photo_active_optimized"/>
    </LinearLayout>
</android.support.v7.widget.Toolbar>
