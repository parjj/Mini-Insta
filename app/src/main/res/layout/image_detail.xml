<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#ffffff"
                                             android:clickable="true">


    <fragment android:layout_width="match_parent"
              android:layout_height="wrap_content"
              class="com.example.instagalleria.fragments.ToolbarTopFragment"
              android:id="@+id/tooltop_id"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/image_detail"

    />


    <ImageView
            android:id="@+id/image_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tooltop_id"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"
            android:layout_marginBottom="6dp"/>

    <ImageButton android:layout_width="0dp" android:layout_height="0dp"
                 android:id="@+id/hearts"
                 android:background="@drawable/icn_like_inactive_optimized"
                 app:layout_constraintTop_toBottomOf="@id/guideline"
                 app:layout_constraintWidth_percent="0.2"
                 app:layout_constraintHeight_percent="0.06"
                 android:scaleX="0.3"
                 android:scaleY="0.5"
                 android:layout_marginTop="4dp"
                 app:layout_constraintRight_toLeftOf="@id/likes"
                 android:layout_marginLeft="10dp"
                />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:hint="likes"
              android:id="@+id/likes"
              app:layout_constraintLeft_toRightOf="@id/hearts"
              app:layout_constraintTop_toBottomOf="@id/guideline"
              android:gravity="center"

              android:layout_marginTop="16dp" android:layout_marginLeft="24dp"/>
    <ImageButton android:layout_width="0dp" android:layout_height="wrap_content"
                 android:id="@+id/settings"
                 android:background="@drawable/icn_like_more_optimized"
                 android:scaleX="0.3"
                 android:scaleY="0.3"
                 app:layout_constraintWidth_percent="0.15"
                 app:layout_constraintBottom_toTopOf="@id/guideline_b"
                 app:layout_constraintLeft_toRightOf="@id/likes"
                 app:layout_constraintTop_toBottomOf="@id/guideline"
                 app:layout_constraintVertical_bias="0.307"

                 android:layout_marginLeft="84dp"/>
    <ImageButton android:layout_width="0dp" android:layout_height="0dp"
                 android:id="@+id/comments"
                 android:background="@drawable/icn_comment_optimized"
                 android:scaleX="0.3"
                 android:scaleY="0.5"
                 app:layout_constraintWidth_percent="0.2"
                 app:layout_constraintHeight_percent="0.06"
                 app:layout_constraintLeft_toRightOf="@id/settings"
                 app:layout_constraintTop_toBottomOf="@id/guideline"
                 android:layout_marginLeft="36dp"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_b"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.68" />
    <ListView
            android:id="@+id/commets_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@+id/guideline_b"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

    />

</android.support.constraint.ConstraintLayout>