<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#ffffff"
                                             android:clickable="true">

    <ImageView
            android:id="@+id/image_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="2:2"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"
            android:layout_marginBottom="6dp"/>

    <ImageButton android:layout_width="0dp" android:layout_height="0dp"
                 android:id="@+id/hearts"
                 android:background="@drawable/icn_like_inactive_optimized"
                 app:layout_constraintTop_toBottomOf="@id/guideline"
                 app:layout_constraintWidth_percent="0.25"
                 app:layout_constraintHeight_percent="0.07"
                 android:scaleX="0.3"
                 android:scaleY="0.5"
                 android:layout_marginTop="4dp"
                 app:layout_constraintRight_toLeftOf="@id/likes"
                 android:layout_marginLeft="10dp"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:hint="likes"
              android:id="@+id/likes"
              app:layout_constraintLeft_toRightOf="@id/hearts"
              app:layout_constraintTop_toBottomOf="@id/guideline"
              android:gravity="bottom"
              android:layout_marginTop="15dp" android:layout_marginLeft="18dp"/>

    <ImageButton android:layout_width="0dp" android:layout_height="wrap_content"
                 android:id="@+id/settings"
                 android:background="@drawable/icn_like_more_optimized"
                 android:scaleX="0.3"
                 android:scaleY="0.3"
                 android:layout_marginTop="5dp"
                 app:layout_constraintWidth_percent="0.15"
                 app:layout_constraintBottom_toTopOf="@id/guideline_b"
                 app:layout_constraintLeft_toRightOf="@id/likes"
                 app:layout_constraintTop_toBottomOf="@id/guideline"
                 app:layout_constraintVertical_bias="0.307"

                 android:layout_marginLeft="84dp"/>
    <ImageButton android:layout_width="0dp" android:layout_height="0dp"
                 android:id="@+id/comments"
                 android:background="@drawable/icn_comment_optimized"
                 app:layout_constraintWidth_percent="0.25"
                 app:layout_constraintHeight_percent="0.07"
                 android:scaleX="0.3"
                 android:scaleY="0.5"
                 android:layout_marginTop="4dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintLeft_toRightOf="@id/settings"
                 app:layout_constraintTop_toBottomOf="@id/guideline"
    />
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_b"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.68"/>
    <ListView
            android:id="@+id/commets_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scrollbars="vertical"
            android:layout_gravity="end|bottom"
            app:layout_constraintTop_toBottomOf="@+id/guideline_b"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />


</android.support.constraint.ConstraintLayout>